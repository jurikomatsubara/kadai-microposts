<%= form_for(micropost) do |f| %>
  <% if micropost.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% micropost.errors.full_microposts.each do |micropost| %>
          <li><%= micropost %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, 'メッセージ' %>
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>
<% end %>